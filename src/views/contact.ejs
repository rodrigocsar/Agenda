<%- include('includes/head') %>
<%- include('includes/nav') %>

   <div class="">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
             <h1 class=" text-center">Contato</h1>
             <p class="text-center lead">Create or Edit your profile.</p>

             <%- include('includes/messages')%>

             <% if(contact._id) {%>
             <form class="form-edit" action="/contact/edit/<%= contact._id%>" method="POST" >
              <%} else {%>
                 <form form class="form-edit" action="/contact/register" method="POST" >
                <% } %>
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>

  <div class="form-group my-3">
    <label >Name</label>
    <input value="<%= contact.name %>" type="text" class="form-control" name="name" >
  </div>
  <div class="form-group my-3">
    <label >Last Name</label>
    <input value="<%= contact.lastName %>" type="text" class="form-control" name="lastName">
  </div>
  <div class="form-group my-3">
    <label >Email</label>
    <input value="<%= contact.email %>" type="email" class="form-control" name="email">
  </div>
  <div class="form-group my-3">
    <label >Phone</label>
    <input value="<%= contact.tel %>" type="tel" class="form-control" name="tel">
  </div>
   

  <button type="submit" class="btn btn-primary">Save</button>
</form>
          
        </div>
        <div class="col-lg-2"></div>
    </div>
   </div>
<%- include('includes/footer') %>
